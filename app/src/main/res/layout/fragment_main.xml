<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="alcoolougasolina.cursoandroid.com.alcoolougasolina.MainActivity$PlaceholderFragment"
    android:background="#25ff4d">

    <ImageView
        android:layout_width="300dp"
        android:layout_height="81dp"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/logo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Preço Álcool"
        android:id="@+id/textView"
        android:layout_below="@+id/imageView"
        android:layout_alignLeft="@+id/imageView"
        android:layout_alignStart="@+id/imageView"
        android:layout_marginTop="36dp"
        android:textColor="#4a4a4a" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Preço Gasolina"
        android:id="@+id/textView2"
        android:layout_alignTop="@+id/textView"
        android:layout_alignRight="@+id/imageView"
        android:layout_alignEnd="@+id/imageView"
        android:textColor="#4a4a4a" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="30sp"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/precoAlcoolId"
        android:background="#9bffffff"
        android:layout_alignTop="@+id/precoGasolinaId"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:padding="5dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="30sp"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/precoGasolinaId"
        android:layout_below="@+id/textView2"
        android:layout_alignRight="@+id/textView2"
        android:layout_alignEnd="@+id/textView2"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:background="#9bffffff"
        android:padding="5dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/texto_botao_verificar"
        android:id="@+id/botaoVerificarId"
        android:layout_marginTop="53dp"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/precoAlcoolId"
        android:layout_alignStart="@+id/precoAlcoolId"
        android:layout_alignRight="@+id/precoGasolinaId"
        android:layout_alignEnd="@+id/precoGasolinaId" />

    <TextView
        android:layout_width="20dp"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textoResultadoId"
        android:textColor="#4a4a4a"
        android:layout_below="@+id/botaoVerificarId"
        android:layout_marginTop="46dp"
        android:layout_alignLeft="@+id/botaoVerificarId"
        android:layout_alignStart="@+id/botaoVerificarId"
        android:layout_alignRight="@+id/botaoVerificarId"
        android:layout_alignEnd="@+id/botaoVerificarId" />

</RelativeLayout>
